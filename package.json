{
  "name": "npppm",
  "version": "3.0.0",
  "scripts": {
    "start": "nodemon server/index.js",
    "start-db": "docker run -d --name npppm-couchdb -e NODENAME=single -p 5985:5984 -v $(pwd)/couchdb-data:/opt/couchdb/data klaemo/couchdb && scripts/initialise-couchdb.sh localhost:5985",
    "stop-db": "docker rm -f npppm-couchdb",
    "clean-db": "rm -rf ./couchdb-data",
    "stop-clean-db": "npm run stop-db & npm run clean-db",
    "lint": "eslint .",
    "test": "npm run test-server && npm run test-client",
    "test-client": "cd client && npm run test",
    "test-server": "mocha \"server/**/tests/*.spec.js\""
  },
  "devDependencies": {
    "babel-eslint": "^7.1.1",
    "couchapp": "^0.11.0",
    "eslint": "^3.12.2",
    "eslint-plugin-react": "^6.10.0",
    "mocha": "^3.1.2",
    "request": "^2.79.0",
    "request-promise": "^4.1.1",
    "sinon": "^1.17.6",
    "unexpected": "^10.18.1",
    "unexpected-couchdb": "^0.10.1",
    "unexpected-http": "^5.6.0",
    "unexpected-mitm": "^9.3.4",
    "unexpected-sinon": "^10.5.0"
  },
  "dependencies": {
    "bcrypt": "^1.0.1",
    "bell": "^8.4.0",
    "bluebird": "^3.4.6",
    "config": "^1.24.0",
    "font-awesome": "^4.7.0",
    "glue": "^4.0.0",
    "hapi": "latest",
    "hapi-auth-jwt2": "^7.2.4",
    "joi": "^9.2.0",
    "jsonwebtoken": "^7.2.1",
    "jszip": "^3.1.3",
    "lodash": "3.5.0",
    "minimatch": "^3.0.3",
    "ms": "^0.7.2",
    "nano": "^6.2.0",
    "node-fetch": "^1.6.3",
    "react-tooltip": "^3.2.6",
    "uuid": "^3.0.0",
    "xml-js-converter": "^1.0.0"
  }
}
